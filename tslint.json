{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ],
        "no-string-literal": false,
        "object-literal-shorthand": false,
        "object-literal-sort-keys": [
            false,
            "ignore-case",
            "match-declaration-order"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ]
    },
    "rules": {
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "array-type": [
            true,
            "array-simple"
        ],
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "max-line-length": {
            "options": [
                120
            ]
        },
        "max-file-line-count": [
            true,
            500
        ],
        "max-classes-per-file": [
            true,
            3
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": [
            true,
            "always-prefix"
        ],
        "import-spacing": true,
        "new-parens": true,
        "no-duplicate-imports": true,
        "no-debugger": false,
        "no-console": false,
        "no-angle-bracket-type-assertion": true,
        "no-trailing-whitespace": true,
        "no-var-requires": false,
        "no-string-literal": false,
        "no-unused-expression": false,
        "no-empty-interface": false,
        "no-bitwise": false,
        "no-empty": [
            true,
            "allow-empty-catch"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "prefer-method-signature": true,
        "prefer-const": [
            true,
            {
                "destructuring": "all"
            }
        ],
        "ordered-imports": [
            false,
            {
                "grouped-imports": false,
                "import-sources-order": "case-insensitive",
                "named-imports-order": "case-insensitive"
            }
        ],
        "object-literal-shorthand": false,
        "object-literal-sort-keys": [
            false,
            "ignore-case",
            "match-declaration-order"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor"
                ]
            }
        ],
        "encoding": true,
        "jsdoc-format": [
            true,
            "check-multiline-start"
        ],
        "jsx-alignment": true,
        "jsx-curly-spacing": false,
        "jsx-self-close": true,
        "jsx-wrap-multiline": true,
        "jsx-no-multiline-js": false,
        "jsx-key": true
    },
    "rulesDirectory": [
        "src/"
    ]
}